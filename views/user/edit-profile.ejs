<style>
    body {
        font-family: Arial, sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 50px 50px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .edit-container h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .edit-form {
        display: flex;
        flex-direction: column;
    }

    .edit-form .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .edit-form label {
        flex: 1;
        margin-right: 10px;
    }

    .edit-form input {
        flex: 2;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .save-button {
        padding: 10px;
        background-color: #3F69AA;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        align-self: center;
        margin-top: 20px;
    }

    .save-button:hover {
        background-color: #0f9308;
    }
</style>

<%- include("../partials/header") %>

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">My Account</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- My Account Start -->
<div class="my-account">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="dashboard-nav" data-toggle="pill" href="#dashboard-tab" role="tab">Profile</a>
                    <a class="nav-link" id="orders-nav" data-toggle="pill" href="#orders-tab" role="tab">Orders</a>
                    <a class="nav-link" id="payment-nav" data-toggle="pill" href="#payment-tab" role="tab">Payment Method</a>
                    <a class="nav-link" id="address-nav" data-toggle="pill" href="#address-tab" role="tab">Address</a>
                    <a class="nav-link" id="account-nav" data-toggle="pill" href="#account-tab" role="tab">Account Details</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="edit-container">
                    <h2>Edit Profile</h2>
                    <form action="/update-profile/<%= userData._id %>" method="POST" class="edit-form" id="editProfileForm">
                        <div id="formAlert" class="alert" style="display:none; color: red; margin-top: 10px;"></div>
                        <div class="form-group">
                            <label for="firstname">Full Name</label>
                            <input type="text" id="firstname" name="name" value="<%= userData.name %>" required>
                        </div>
            
                        <div class="form-group">
                            <label for="mobile">Mobile Number</label>
                            <input type="text" id="mobile" name="mobile" value="<%= userData.mobile %>" required>
                        </div>
            
                        <div class="form-group" hidden>
                            <label for="email">Email ID</label>
                            <input type="email" id="email" name="email" value="<%= userData.email %>" required>
                        </div>
            
                        <div id="formAlert" class="alert" style="display:none; color: red; margin-top: 10px;"></div>
            
                        <button type="submit" class="save-button">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- My Account End -->

<script>
    document.getElementById('editProfileForm').addEventListener('submit', function(event) {
        const nameInput = document.getElementById('firstname');
        const mobileInput = document.getElementById('mobile');
        const formAlert = document.getElementById('formAlert');

        let errorMessage = '';

        if (nameInput.value.trim() === '') {
            errorMessage = 'Full Name cannot be empty or just spaces.';
            nameInput.focus();
        }
        if (!/^\d{10}$/.test(mobileInput.value.trim())) {
            errorMessage = 'Mobile Number must be a 10-digit number.';
            mobileInput.focus();
        } 

        if (errorMessage) {
            formAlert.textContent = errorMessage;
            formAlert.style.display = 'block';
            event.preventDefault();
        } else {
            formAlert.style.display = 'none';
        }
    });
</script>

<%- include("../partials/footer") %>
