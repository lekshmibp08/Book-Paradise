<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            height: 100vh;
            background-color: #6f42c1;
            padding-top: 20px;
            color: white;
            position: fixed;
            left: 0;
            width: 250px;
            transition: left 0.3s;
            z-index: 2;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 10px;
            text-decoration: none;
            text-align: center;
        }
        .sidebar a:hover {
            background-color: #5a36a3;
        }
        .top-bar {
            background-color: #6f42c1;
            color: white;
            padding: 10px;
            margin-left: 250px;
            transition: margin-left 0.3s;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }
        .top-bar .search-bar {
            margin-right: 20px;
        }
        .main-content {
            padding: 20px;
            margin-left: 250px;
            transition: margin-left 0.3s;
        }
        .table thead th {
            background-color: #6f42c1;
            color: white;
        }
        .action-icons a {
            margin-right: 10px;
        }
        @media (max-width: 768px) {
            .sidebar {
                left: -250px;
            }
            .sidebar.active {
                left: 0;
            }
            .top-bar {
                margin-left: 0;
            }
            .top-bar.active {
                margin-left: 250px;
            }
            .main-content {
                margin-left: 0;
            }
            .main-content.active {
                margin-left: 250px;
            }
        }
        .toggle-btn {
            display: none;
        }
        @media (max-width: 768px) {
            .toggle-btn {
                display: block;
                cursor: pointer;
                margin-right: 20px;
            }
            .search-bar,
            .user-info {
                flex: 1;
            }
            .search-bar input {
                width: 100%;
            }
        }
        .header-content {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
        }
        .header-content .search-bar {
            flex-grow: 1;
            margin-right: 10px;
        }
        .header-content .add-product-btn {
            margin-top: 10px;
            flex-shrink: 0;
        }
        .table tbody td {
            text-align: center;
        }
        .unblock-btn {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
        }
    
        .unblock-btn:hover {
            background-color: #e0a800; 
            border-color: #e0a800;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="sidebar" id="sidebar">
                <div class="text-center mb-4">
                    <img src="/adminAssets/assets/images/main-logo.png" alt="Books Paradise" class="img-fluid">
                </div>
                <a href="/admin/dashboard">Dashboard</a>
                <a href="/admin/products">Products</a>
                <a href="/admin/users">Users</a>
                <a href="/admin/Orders">Orders</a>
                <a href="/admin/return-orders">Returned Orders</a>
                <a href="/admin/coupons">Coupons</a>
                <a href="/admin/category">Categories</a>
                <a href="/admin/reports">Reports</a>
                <a href="/admin/logout">Log Out</a>
            </div>
            <div class="col-md-12">
                <div class="top-bar" id="top-bar">
                    <div class="d-flex align-items-center">
                        <span class="toggle-btn" id="toggle-btn"><i class="fas fa-bars fa-2x"></i></span>
                        <div class="search-bar">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <div class="search-bar">
                            <input type="text" class="form-control" placeholder="Search product name">
                        </div>
                    </div>
                    <div class="user-info d-flex align-items-center">
                        <span>Hi Admin</span>
                        <i class="fas fa-user-circle fa-2x ml-3"></i>
                    </div>
                </div>
                <div class="main-content" id="main-content">
                    <div class="d-flex justify-content-between align-items-center mb-3 header-content">
                        <h2>Products</h2>
                        <button class="btn btn-success add-product-btn">
                            <a href="/admin/addProducts" style="color: white; text-decoration: none;">
                                + Add Product
                            </a>
                        </button>
                    </div>
                    <table class="table table-striped text-center"">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Regular Price</th>
                                <th>Selling Price</th>
                                <th>No. of Pieces</th>
                                <th>Offer Applied</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <tr>
                                <td><img src="/uploads/product-images/<%= product.productImage.length > 0 ? product.productImage[0] : '/adminAssets/assets/images/defaultImage.png' %>" alt="<%= product.name %>" class="img-fluid" style="max-width: 50px;"></td>
                                <td><%= product.productName %></td>
                                <td><%= product.category %></td>
                                <td>Rs.<%= product.regularPrice %></td>
                                <td><%= product.salePrice %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.productOffer %></td>
                                <td class="action-icons">
                                    <div class="d-flex align-items-center">
                                        <a href="/admin/editProduct?id=<%= product._id %>"><i class="fas fa-edit"></i></a>
                                        <% if (product.isBlocked === false) { %>
                                            <form action="/admin/blockProduct?id=<%= product._id %>" method="POST">
                                                <button type="submit" class="btn btn-danger ml-2" style="width: 80px;">Block</button>
                                            </form>
                                        <% } else { %>
                                            <form action="/admin/unblockProduct?id=<%= product._id %>" method="POST">
                                                <button type="submit" class="btn btn-success unblock-btn ml-2" style="width: 80px;">Unblock</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </td>                                                                
                            </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                    <nav>
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('toggle-btn').addEventListener('click', function() {
            var sidebar = document.getElementById('sidebar');
            var topBar = document.getElementById('top-bar');
            var mainContent = document.getElementById('main-content');
            sidebar.classList.toggle('active');
            topBar.classList.toggle('active');
            mainContent.classList.toggle('active');
        });
    </script>
</body>
</html>
